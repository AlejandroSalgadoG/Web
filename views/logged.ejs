<html>

    <head>
        <link rel="stylesheet" href="/styles/logged.css">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    </head>

    <body>
    <br>
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-sm-2 col-lg-11">
                    <form class="form-inline" action='/manage_account' method="get">
                        <button class="btn btn-primary" type="submit"> Manage Account </button>
                    </form>
                </div>
                <div class="col-md-2 col-sm-2 col-lg-1">
                    <form class="form-inline" action='/logout' method="get">
                        <button class="btn btn-primary full" type="submit"> Log out </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

        <br>
        <div class="text-center">
            <h1> Welcome <%= user %> </h1>
        </div>
        <br>

        <div class="container">
            <div class="row spacing">
                <div class="col-md-4 delimiting">
                    <h2>Create image</h2>

                    <form action='/create_image' method="post" encType="multipart/form-data">
                        <input class="btn btn-primary" type="file" name="img_file" required><br>
                        <label>Name: </label>
                        <input class="form-control" type="text" name="img_name" placeholder="img1" required><br>
                        <label>Type: </label>
                        <input class="form-control" type="text" name="img_type" placeholder="jpg" required><br>
                        <label>Size (MB): </label>
                        <input class="form-control" type="text" name="img_size" placeholder="1" required><br>
                        <label>Dimension: </label>
                        <input class="form-control" type="text" name="img_dimension" placeholder="512x512" required><br>

                        <label>Scope: </label>
                        <input type="radio" name="img_private" id="img_private"
                                      onclick='radar_handler("private")' checked> Private
                        <input type="radio" name="img_public" id="img_public"
                               onclick='radar_handler("public")'> Public <br>

                        <button class="btn btn-primary" type="submit"> Create </button>
                    </form>
                </div>

                <div class="col-md-4">
                    <h2> Delete image </h2>

                    <form action='/delete_image' method="post">
                        <label>Name: </label>
                        <input class="form-control" type="text" name="del_img_name" placeholder="img1" required><br>
                        <button class="btn btn-primary" type="submit"> Delete </button>
                    </form>

                    <%= msg %>
                </div>

                <div class="col-md-4 delimiting">
                    <h2> Update image </h2>

                    <p> Only need to fill the values that you want to update: </p>

                    <form action='/update_image' method="post">
                        <label>Name: </label>
                        <input class="form-control" type="text" name="img_name" required><br>
                        <label>Type: </label>
                        <input class="form-control" type="text" name="img_type"><br>
                        <label>Size (MB): </label>
                        <input class="form-control" type="text" name="img_size"><br>
                        <label>Dimension: </label>
                        <input class="form-control" type="text" name="img_dimension"><br>
                        <label>Scope: </label>
                        <input type="radio" name="img_private2" id="img_private2"
                                      onclick='radar_handler2("private")'> Private
                        <input type="radio" name="img_public2" id="img_public2"
                               onclick='radar_handler2("public")'> Public <br>

                        <button class="btn btn-primary" type="submit"> Update </button>
                    </form>

                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-6">
                    <h2> Share/Unshare image </h2>

                    <form action='/share_image' method="post">
                        <label>User: </label>
                        <input class="form-control" type="text" name="img_user_share" required><br>
                        <label>Image: </label>
                        <input class="form-control" type="text" name="img_name_share" required><br>
                        <button class="btn btn-primary" type="submit" name="share"> Share </button>
                        <button class="btn btn-primary" type="submit" name="unshare"> Unshare </button>
                    </form>
                </div>


                <div class="col-md-6">
                    <div>
                        <h2>Search images</h2>

                        <form action='/search_user_images' method="get">
                            <input class="form-control" type="text" name="img_search" required>
                            <br>
                            <button class="btn btn-primary" type="submit"> Search </button>
                        </form>

                        <br>
                        <div class="row">
                            <div class="col-2">
                                <form class="form-inline" action='/search_public_images' method="get">
                                    <button class="btn btn-outline-primary" type="submit"> Public </button>
                                </form>
                            </div>
                            <div class="col-2">
                                <form class="form-inline" action='/search_shared_images' method="get">
                                    <button class="btn btn-outline-primary" type="submit"> Shared </button>
                                </form>
                            </div>
                            <div class="col">
                                <form class="form-inline" action='/search_private_images' method="get">
                                    <button class="btn btn-outline-primary" type="submit"> My images </button>
                                </form>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <% for(var i=0; i<search.length; i++){ %>
                            <img src="<%= search[i].name+"."+search[i].type %>" style="width:300px;height:300px;">
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

    </body>

    <script type="text/javascript" src="/scripts/logged.js"></script>
</html>
